<Page x:Class="VeterenarnayaKlinika.Views.Pages.RecordPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:VeterenarnayaKlinika.Views.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="RecordPage">

    <Grid>
        <StackPanel Orientation="Vertical"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    Margin="0 50 0 0">

            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center">
            
                <TextBlock Text="ФИО врача: "
                           Margin="0 0 5 0"/>
                <TextBox x:Name="txtNameDoctor" Width="150"/>

            </StackPanel>

            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Margin="34 5 0 0">

                <TextBlock Text="Дата: "
                           Margin="0 0 5 0" />
                          
                <DatePicker x:Name="txtDate" Width="150"/>

            </StackPanel>

        </StackPanel>
    </Grid>
</Page>
