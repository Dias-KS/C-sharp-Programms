            <Grid Grid.Row="0">

                <StackPanel HorizontalAlignment="Right"
                        VerticalAlignment="Top"
                        Margin="0 10 10 0">

                    <Button x:Name="btnExit"
                            Width="40"
                            Height="40"
                            Style="{StaticResource MaterialDesignFloatingActionButton}"
                            ToolTip="Close"
                            Click="btnExit_Click">

                        <materialDesign:PackIcon 
                            Kind="Close"  
                            Height="24" 
                            Width="24"/>    

                    </Button>

                </StackPanel>

                <StackPanel HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            Margin="10 10 0 0">

                    <Button x:Name="btnBack"
                            Style="{StaticResource MaterialDesignFloatingActionButton}"
                            ToolTip="Back"
                            Width="40"
                            Height="40"
                            Click="btnBack_Click">

                        <materialDesign:PackIcon 
                            Kind="ArrowBack" 
                            Height="24" 
                            Width="24"/>

                    </Button>

                </StackPanel>

                <StackPanel HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Orientation="Horizontal"
                            Margin="20 0 0 0">

                    <Border Width="250"
                            Height="50"
                            Background="White"
                            CornerRadius="30"
                            Margin="0 15 0 0">

                        <Border.Effect>
                            <DropShadowEffect BlurRadius="20" Color="Black" ShadowDepth="0"/>
                        </Border.Effect>

                        <TextBox x:Name="txbSearch"
                                 Height="40"
                                 Width="200"
                                 Margin="0 0 0 10"
                                 materialDesign:HintAssist.Hint="Поиск : "  
                                 Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                                 TextChanged="txbSearch_TextChanged_1"/>


                    </Border>

                    <Button x:Name="btnClean"
                            Width="40"
                            Height="40"
                            Style="{StaticResource MaterialDesignFloatingActionButton}"
                            ToolTip="Clean"
                            Margin="10 15 0 0"
                            Click="btnClean_Click">


                        <materialDesign:PackIcon 
                        Kind="Cached" 
                        Height="24" 
                        Width="24"/>

                    </Button>


                </StackPanel>

            </Grid>

            <Grid Grid.Row="1">


                <Border Background="White"
                        CornerRadius="20"
                        Margin="12 15 12 12">

                    <Border.Effect>
                        <DropShadowEffect BlurRadius="20" Color="Black" ShadowDepth="0"/>
                    </Border.Effect>


