                    <DataGrid x:Name="dataView"
                              AutoGenerateColumns="False"
                              ColumnWidth="*"> 
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Binding="{Binding ID}" Width="10*"/>
                            <DataGridTextColumn Header="Имя" Binding="{Binding ClientRegister.FirstName}" Width="20*"/>
                            <DataGridTextColumn Header="Фамилия" Binding="{Binding ClientRegister.LastName}" Width="20*"/>
                            <DataGridTextColumn Header="Дата регистрации" Binding="{Binding ClientRegister.DateRegistration}" Width="30*"/>
                            <DataGridTextColumn Header="Дата принятия заказа" Binding="{Binding ClientRegister.DateAccept}" Width="30*"/>
